<div class="cointainer d-flex flex-wrap align-items-center justify-content-center m-5">
  <div class="col-md-10">
    <h2 class="mb-4">
      Books
    </h2>

    <div class="mb-2">
      <%= page_entries_info @books %>
    </div>

    <%= form_tag(books_path, method: 'get', class: "d-flex mb-3") do %>
      <%= text_field_tag(:search, params[:search], placeholder: "Search books", class: "form-control me-2") %>
      <%= submit_tag("Search", name: nil, class: "btn btn-success") %>
    <% end %>

    <%= render "layouts/pagination", resources: @books %>

    <div class="mb-4">
      <%= link_to 'New book', new_book_path, class: "btn btn-info mb-4" %>

      <div class="row row-cols-1 row-cols-md-4 g-4 mb-4">
        <% @books.each do |book| %>
          <%= render book, btn_show: true %>
        <% end %>
      </div>
    </div>
  </div>
</div>
