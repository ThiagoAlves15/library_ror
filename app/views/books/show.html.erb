<div class="cointainer d-flex flex-wrap align-items-center justify-content-center m-5">
  <div class="col-md-8">
    <h2>
      Show book
    </h2>

    <div class="mb-4">
      <%= render @book, btn_show: false %>

      <div class="d-grid gap-2 col-md-8 mx-auto mt-4">
        <div class="d-flex gap-2">
          <%= link_to 'Back to books', books_path, class: "btn btn-primary w-100" %>
          <%= link_to 'Edit this book', edit_book_path(@book), class: "btn btn-outline-primary w-100" %>
        </div>
      </div>
    </div>
  </div>
</div>
