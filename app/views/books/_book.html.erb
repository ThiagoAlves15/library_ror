<div class="col">
  <div class="card h-100">
    <div class="card-body">
      <p class="card-text">
        <strong>Title:</strong>
        <%= book.title %>
      </p>

      <p class="card-text">
        <strong>Author:</strong>
        <%= book.author %>
      </p>

      <p class="card-text">
        <strong>Category:</strong>
        <%= book.category %>
      </p>
    </div>

    <% if btn_show %>
      <div class="card-footer">
        <%= link_to 'Show book', book_path(book), class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
