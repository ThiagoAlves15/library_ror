<%= bootstrap_form_with(model: book) do |f| %>
  <%= render "layouts/error_messages", resource: book %>

  <%= f.text_field :title, placeholder: "Title of book" %>
  <%= f.text_field :author, placeholder: "Author of book" %>
  <%= f.text_field :category, placeholder: "Book category or genre" %>
  <%= f.submit class: "btn btn-primary btn-lg w-100" %>
<% end %>
