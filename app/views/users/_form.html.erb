<%= bootstrap_form_with(model: user) do |f| %>
  <%= render "layouts/error_messages", resource: user %>

  <%= f.text_field :name, placeholder: "Full name", autocomplete: "name" %>
  <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email" %>
  <%= f.password_field :password, placeholder: 'Password', help: '6 character minimum', autocomplete: "password" %>

  <%= f.submit class: "btn btn-primary btn-lg w-100" %>
<% end %>
