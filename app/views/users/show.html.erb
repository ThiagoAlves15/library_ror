<div class="cointainer d-flex flex-wrap align-items-center justify-content-center m-5">
  <div class="col-md-8">
    <h2>
      Show user
    </h2>

    <div class="mb-4">
      <%= render @user, btn_show: false %>

      <div class="d-grid gap-2 col-md-8 mx-auto mt-4">
        <div class="d-flex gap-2">
          <%= link_to 'Back to users', users_path, class: "btn btn-primary w-100" %>
          <%= link_to 'Edit this user', edit_user_path(@user), class: "btn btn-secondary w-100" %>
        </div>
      </div>
    </div>
  </div>
</div>
