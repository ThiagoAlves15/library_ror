<div class="cointainer d-flex flex-wrap align-items-center justify-content-center m-5">
  <div class="col-md-8">
    <h2>
      Editing user
    </h2>

    <div class="mb-4">
      <%= render "form", user: @user %>

      <div class="d-grid gap-2 col-md-8 mx-auto mt-4">
        <div class="d-flex gap-2">
          <%= link_to 'Back to users', users_path, class: "btn btn-secondary w-100" %>
        </div>

        <hr class="mb-3 mt-4" />

        <%= button_to 'Destroy this user', @user, method: :delete, class: "btn btn-danger w-100" %>
      </div>
    </div>
  </div>
</div>
